

@model CharceApp.Models.ProfilePic_Product


@{
    ViewBag.Title = "Add Product";
}



<div class="container" style="margin-top:20px">

    @using (Html.BeginForm("Create", "ProfilePicsProduct", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()


        <div class="form-horizontal">
            <h5 style="font-weight:100;text-align:center">Add Product</h5>
            <hr />
            <br />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @*<div class="form-group">
                    @Html.LabelFor(model => model.UserId, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.UserId, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
                    </div>
                </div>*@

            
                <label for="Name">Name</label>
                <input type="text" class="form-control" placeholder="Name" name="Name" />
                <br />

                <label for="Description">Description</label>
                <textarea type="text" class="form-control" placeholder="Description" name="Description" ></textarea>
                <br />

                <label for="Item_Type">Item Type</label>
                <input type="text" class="form-control" placeholder="Type" name="Item_Type" />
                <br />

                <label for="Discount">Discount</label>
                <input type="text" class="form-control" placeholder="Discount" name="Discount" />
                <br />

                <label for="Price">Price</label>
                <input type="text" class="form-control" placeholder="Price" name="Price" />
                <br />

                <label for="Tax">Tax</label>
                <input type="text" class="form-control" placeholder="Tax" name="Tax" />
                <br />
                
                <br />
                @Html.Label("Size must be less than 3mb", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="file" id="Avatar" name="pic" accept=".png,.jpg,.jpeg,.gif,.tif" />
                </div>
                <div class="col-md-10 hidden ">
                    <input type="text" id="Avatar" name="BusinessID" value="@ViewBag.BusinessID" />
                </div>
           
            <br />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Upload" class="btn btn-small btn-default" />
                </div>
            </div>
        </div>
    }

</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}








