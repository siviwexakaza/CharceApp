@model CharceApp.Models.ProfilePic_Product

@{
    ViewBag.Title = Model.Name +", R"+Model.Price+" | Shop with Charce Now!";
}


<div class="ui divided items">
    <div class="item">
        @using (CharceApp.Models.ApplicationDbContext db = new CharceApp.Models.ApplicationDbContext())
        {

            CharceApp.Models.OptimaziedProductPic optpic = db.optimazedProductPics.ToList().Where(x => x.ProductID == Model.ID).FirstOrDefault();

            <div class="image">
                <img src="@optpic.ImageURL">
                @*<img src="/ProfilePicFile/ProductPic/@Model.ID">*@
            </div>

        }

        
        <div class="content">
            <a class="header">@Model.Name | @Model.Price</a>
            <div class="meta">
                <span class="cinema">@Model.Description</span>
            </div>
            @*<div class="description">
                <p>@ViewBag.Location</p>
                <p>@ViewBag.Email | @ViewBag.Phone</p>

            </div>*@
        </div>
    </div>

</div>


