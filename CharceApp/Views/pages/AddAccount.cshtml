
@{
    ViewBag.Title = "AddAccount";
}

<div class="ui form" id="addAcc_Form">
    
    <div class="field">
        <label>Name</label>
        <input type="text" id="business_name" placeholder="Business Name">
    </div>
    <div class="field">
        <label>Business Type</label>
        <input type="text" id="business_type" placeholder="Business Type">
    </div>
    <div class="field">
        <label>Location</label>
        <input type="text" id="business_location" placeholder="Location">
    </div>
    <div class="field">
        <label>Telephone Number</label>
        <input type="text" id="business_number" placeholder="Telephone Number">
    </div>
    <div class="field">
        <label>Email Address</label>
        <input type="text" id="business_email" placeholder="Email Address">
    </div>
    <div class="field">
        <label>Website</label>
        <input type="text" id="business_website" placeholder="Website">
    </div>

    <button class="ui linkedin button" type="submit" id="btn_add_business">Add Account</button>
</div>

