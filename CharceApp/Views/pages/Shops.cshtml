@{
    if (ViewBag.hasSearch)
    {
        <form action="/pages/shops">
            <div class="ui fluid icon input" style="margin-bottom:20px">
                <input type="text" placeholder="Search..." name="search" value="@ViewBag.Search">
                <i class="search icon"></i>
            </div>
        </form>

    }
    else
    {
        <form action="/pages/shops">
            <div class="ui fluid icon input" style="margin-bottom:20px">
